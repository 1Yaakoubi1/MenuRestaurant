<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/chckBoxP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/pizza"
        />
    <CheckBox
        android:id="@+id/chckBoxH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chckBoxP"
        android:layout_marginTop="37dp"
        android:text="@string/Hamburger"
        />
    <CheckBox
        android:text="@string/boisson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chckBoxH"
        android:layout_marginTop="44dp"
        android:id="@+id/chckBoxB"
        />
    <Button
        android:id="@+id/btAddition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chckBoxB"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@id/chckBoxH"
        android:text="ADDITION"/>

</RelativeLayout>